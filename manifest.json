{
    "manifest_version": 3,
    "name": "timezoner",
    "version": "1.0.0",
    "description": "A firefox addon that automatically converts the times on the webistes to your local timezoe.",
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/moment.js","src/momenttz.js","src/script.js"]
      }
    ],
    "browser_specific_settings": {
        "gecko": {
          "id": "timezoner-firefox-addon@thevenuz"
        }
      },
    "icons":{
      "16":"assets/icon16.png",
      "32":"assets/icon32.png",
      "48":"assets/icon48.png",
      "128":"assets/icon128.png"
    },
    "incognito":"spanning"  
  }
  